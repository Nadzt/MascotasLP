<% if(success.length) { %>
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="tostada" data-bs-delay="10000">
            <div class="toast-header" style="background-color: #136F63">
                <strong class="me-auto" style="color: #FFFFFF;"><i class="fas fa-paw"></i>  Mascotas Perdidas</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
            <%= success %>
            </div>
        </div>
    </div>
<% } %>

<% if(error.length) { %> 
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="tostada" data-bs-delay="10000">
            <div class="toast-header" style="background-color: #812A2A">
                <strong class="me-auto" style="color: #FFFFFF;"><i class="fas fa-paw"></i> Mascotas Perdidas</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
            <%= error %>
            </div>
        </div>
    </div>
<% } %> 